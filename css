/* Base styles for html and body */
html, body {
    height: 100%; /* Ensures that the body takes full viewport height */
    margin: 0;
    padding: 0;
}

/* Base styles for body */
body {
    font-family: 'Great Vibes', cursive, sans-serif; /* Fallback to sans-serif */
    background-image: url('throughTrees.jpg');
    background-size: cover; /* Cover the entire area while maintaining aspect ratio */
    background-position: center; /* Center the image */
    background-repeat: no-repeat; /* Do not repeat the image */
}

/* Styles for h1 */
h1 {
    font-family: 'Great Vibes', cursive;
    font-size: 3.5rem; /* Adjust for scalability */
    text-align: center; /* Center align the text */
    color: #eef3e4; /* Set the text color - change as needed */
    margin-top: 20px; /* Add space at the top, adjust as needed */
}

/* Styles for h2 */
h2 {
    font-family: 'Lato', sans-serif;
    font-size: 1.5rem; /* Adjust for scalability */
    text-align: center;
    color: #eef3e4; /* This will use the default body color, which is cream/off-white */
    margin-top: 20px; /* Adjust spacing as needed */
}
h3 {
    font-family: 'Great Vibes', cursive;
    font-size: 3.5rem; /* Adjust for scalability */
    text-align: center; /* Center align the text */
    color: #eef3e4; /* Set the text color - change as needed */
    margin-top: 20px; /* Add space at the top, adjust as needed */
}

/* Styles for centered-link */
.centered-link {
    text-align: center; /* Centers inline or inline-block elements within the div */
    margin-top: -40px; /* Add spacing as needed */
}

/* Styles for links */
a {
    color: #11ec6d; /* Google's blue color, change as needed */
    font-size: 1rem; /* Adjust for scalability */
    text-decoration: none; /* Removes underline */
    font-family: 'Lato', sans-serif; /* Consistent with your body text font */
    margin-top: 1px; /* Adds space above the link */
    display: inline-block; /* Useful for adding padding or if you want a background color */
}

/* Styles for links on hover */
a:hover {
    text-decoration: underline; /* Adds underline on hover for better user experience */
}

/* Styles for footer-links */
.footer-links {
    text-align: center;
    padding: 20px;
    margin-top: 320px; /* Adjust as needed */
}

/* Styles for footer-links anchors */
.footer-links a {
    color: #11ec6d; /* Example link color */
    margin: 0 20px; /* Space between links */
    text-decoration: none;
    font-family: 'Lato', sans-serif; /* Consistent with your body text font */
}

/* Styles for footer-links anchors on hover */
.footer-links a:hover {
    text-decoration: underline;
}

/* Responsive adjustments for smaller screens */
@media screen and (max-width: 600px) {
    body {
        background-image: url('highway.JPG');
        position: relative; /* Needed for absolute positioning of children */
    }
    h1 {
        font-family: 'Grape Nuts', cursive;
        font-size: 5.5rem; /* Adjusted font size for smaller screens */
        position: absolute; /* Absolute positioning */
        top: 50%; /* Position halfway down the parent */
        left: 50%; /* Position halfway across the parent */
        transform: translate(-50%, -50%); /* Adjust position to center the element */
        width: 100%; /* Full width to ensure center alignment */
        margin: 0; /* Remove margin */
    }
    h2 {
        font-size: 1.2rem; /* Adjusted font size for smaller screens */
    }
    .centered-link a, .footer-links a {
        font-size: 0.9rem; /* Adjusted font size for smaller screens */
    }
    .footer-links {
        position: fixed; /* Position at the bottom of the viewport */
        bottom: 0;
        left: 0;
        width: 100%;
        text-align: center;
        padding: 20px;
    }
}

